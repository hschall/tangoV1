<%= link_to "Nuevo Registro", new_sucursal_path, class: "btn btn-primary", style: "background-color: #4f98bf; border: none; padding: 4px 10px; font-size: 0.85rem;" %>

<%= link_to "Importar desde archivo", import_sucursales_path, class: "btn btn-outline-secondary", style: "font-size: 0.8rem; margin-right: 10px;" %>


<div class="container-fluid mt-5">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle text-center w-150" style="border-radius: 7px; overflow: hidden; font-size: 0.75rem;">
      <thead>
        <tr>
          <th colspan="7" class="text-white text-start px-2.5 py-1 fw-normal" style="background-color: #1b5892; font-size: 0.95rem;">Sucursales</th>
        </tr>
        <tr>
          <th>ID</th>
          <th>Código</th>
          <th>Ruta</th>
          <th>Dirección</th>
          <th>Código Postal</th>
          <th>Activo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @sucursales.each do |sucursal| %>
          <tr>
            <td><%= sucursal.id %></td>
            <td><%= sucursal.codigo %></td>
            <td><%= sucursal.ruta %></td>
            <td><%= sucursal.direccion %></td>
            <td><%= sucursal.cp %></td>
            <td><%= sucursal.activo ? "Sí" : "No" %></td>
            <td class="d-flex justify-content-center gap-1">
              <%= link_to "Editar", edit_sucursal_path(sucursal), class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %>
              <%= button_to "Eliminar", sucursal, method: :delete, data: { confirm: "¿Seguro que deseas eliminar la sucursal?" }, class: "btn btn-outline-danger btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
