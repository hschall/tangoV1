<%= form_with(model: sucursal, class: "mt-3") do |form| %>
  <% if sucursal.errors.any? %>
    <div class="alert alert-danger">
      <h6 style="font-size: 0.85rem;"><%= pluralize(sucursal.errors.count, "error") %> impidieron guardar la sucursal:</h6>
      <ul style="font-size: 0.75rem;">
        <% sucursal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm p-3" style="border-radius: 0.6rem; font-size: 0.8rem;">
    <h6 class="mb-3 text-primary" style="font-size: 0.9rem;">Formulario de Sucursal</h6>

    <div class="row mb-2">
      <div class="col-md-6">
        <%= form.label :codigo, "Código", class: "form-label" %>
        <%= form.text_field :codigo, class: "form-control form-control-sm" %>
      </div>

      <div class="col-md-6">
        <%= form.label :ruta, "Ruta", class: "form-label" %>
        <%= form.text_field :ruta, class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-6">
        <%= form.label :direccion, "Dirección", class: "form-label" %>
        <%= form.text_field :direccion, class: "form-control form-control-sm" %>
      </div>

      <div class="col-md-3">
        <%= form.label :cp, "Código Postal", class: "form-label" %>
        <%= form.text_field :cp, class: "form-control form-control-sm" %>
      </div>

      <div class="col-md-3">
        <%= form.label :activo, "Activo", class: "form-label d-block" %>
        <div class="form-check form-switch mt-2">
          <%= form.check_box :activo, class: "form-check-input", checked: sucursal.activo %>
        </div>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :bodega_id, "Bodega (Opcional)", class: "form-label" %>
        <%= form.collection_select :bodega_id, Bodega.all, :id, :nombre,
              prompt: "Selecciona una bodega...",
              class: "form-select form-select-sm" %>
      </div>
    </div>

    <div class="text-end mt-3">
      <%= form.submit "Guardar", class: "btn btn-primary", style: "background-color: #4f98bf; border: none; font-size: 0.8rem; padding: 5px 12px;" %>
    </div>
  </div>
<% end %>
