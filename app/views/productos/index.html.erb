<%= link_to "Nuevo Registro", new_producto_path, class: "btn btn-primary", style: "background-color: #4f98bf; border: none; padding: 4px 10px; font-size: 0.85rem;" %>

<%= link_to "Importar desde archivo", import_productos_path, class: "btn btn-outline-secondary", style: "font-size: 0.8rem; margin-right: 10px;" %>


<div class="container-fluid mt-5">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle text-center w-150" style="border-radius: 7px; overflow: hidden; font-size: 0.75rem;">
      <thead>
        <tr>
          <th colspan="9" class="text-white text-start px-2.5 py-1 fw-normal" style="background-color: #1b5892; font-size: 0.95rem;">Productos</th>
        </tr>
        <tr>
          <th>SAP ID</th>
          <th>Nombre</th>
          <th>UM Compras</th>
          <th>UM Inventario</th>
          <th>UM Ventas</th>
          <th>Costo</th>
          <th>Precio Venta</th>
          <th>Código de Barras</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @productos.each do |producto| %>
          <tr>
            <td><%= producto.sap_id %></td>
            <td><%= producto.nombre %></td>
            <td><%= producto.um_compras %></td>
            <td><%= producto.um_inventario %></td>
            <td><%= producto.um_ventas %></td>
            <td><%= number_to_currency(producto.costo) %></td>
            <td><%= number_to_currency(producto.precio_venta) %></td>
            <td><%= producto.codigo_barras %></td>
            <td class="d-flex justify-content-center gap-1">
              <%= link_to "Editar", edit_producto_path(producto), class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %>
              <%= button_to "Eliminar", producto, method: :delete, data: { confirm: "¿Seguro que deseas eliminar el producto?" }, class: "btn btn-outline-danger btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
