<%= form_with(model: bodega, class: "mt-3") do |form| %>
  <% if bodega.errors.any? %>
    <div class="alert alert-danger">
      <h6 style="font-size: 0.85rem;"><%= pluralize(bodega.errors.count, "error") %> impidieron guardar la bodega:</h6>
      <ul style="font-size: 0.75rem;">
        <% bodega.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm p-3" style="border-radius: 0.6rem; font-size: 0.8rem;">
    <h6 class="mb-3 text-primary" style="font-size: 0.9rem;">Formulario de CEDIS</h6>

    <div class="row mb-2">
      <div class="col-md-6">
        <%= form.label :codigo, "Código", class: "form-label" %>
        <%= form.text_field :codigo, class: "form-control form-control-sm" %>
      </div>

      <div class="col-md-6">
        <%= form.label :nombre, "Nombre", class: "form-label" %>
        <%= form.text_field :nombre, class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-md-8">
        <%= form.label :direccion, "Dirección", class: "form-label" %>
        <%= form.text_field :direccion, class: "form-control form-control-sm" %>
      </div>

      <div class="col-md-4">
        <%= form.label :cp, "Código Postal", class: "form-label" %>
        <%= form.text_field :cp, class: "form-control form-control-sm" %>
      </div>
    </div>

    <div class="text-end mt-3">
      <%= form.submit "Guardar", class: "btn btn-primary", style: "background-color: #4f98bf; border: none; font-size: 0.8rem; padding: 5px 12px;" %>
    </div>
  </div>
<% end %>
